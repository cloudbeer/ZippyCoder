<Page x:Class="ZippyWPFForm.PPCodeCreateResult"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="PPCodeCreateResult">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" HorizontalAlignment="Left" Margin="10 10 10 20"  FontWeight="Bold" FontSize="20" FontFamily="雅黑" Foreground="Red">Zippy提示信息</Label>
        <TextBox Name="tbxInfo" Grid.Column="0" Grid.Row="1" AcceptsReturn="True" AcceptsTab="True" FontSize="14" Padding="20" TextWrapping="Wrap">            
        </TextBox>
    </Grid>
</Page>
